{%- style -%}
  .card {
    width: 50%;
    padding: 1.5rem;
    position: sticky;
    background: white;
    border-radius: 4px;
    align-self: center;
    box-shadow: 0 -0.5rem 1rem rgba(0, 0, 0, 0.15);
  }

  .card:nth-child(1) {
    top: 11rem;
    bottom: 11rem;
    transform: rotate(1deg);
  }

  .card:nth-child(2) {
    top: 12rem;
    bottom: 12rem;
    transform: rotate(2deg);
  }

  .card:nth-child(3) {
    top: 13rem;
    bottom: 13rem;
    transform: rotate(3deg);
  }

  .card:nth-child(4) {
    top: 14rem;
    bottom: 14rem;
    transform: rotate(4deg);
  }

  .card:nth-child(5) {
    top: 15rem;
    bottom: 15rem;
    transform: rotate(5deg);
  }

  .card:nth-child(6) {
    top: 16rem;
    bottom: 16rem;
    transform: rotate(6deg);
  }

  .card:nth-child(7) {
    top: 17rem;
    bottom: 17rem;
    transform: rotate(7deg);
  }

  .card:nth-child(8) {
    top: 18rem;
    bottom: 18rem;
    transform: rotate(8deg);
  }

  .card:nth-child(9) {
    top: 19rem;
    bottom: 19rem;
    transform: rotate(9deg);
  }

  .card:nth-child(10) {
    top: 20rem;
    bottom: 20rem;
    transform: rotate(10deg);
  }

  .sticky {
    display: flex;
    position: sticky;
    position: -webkit-sticky;
    flex-direction: column;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .multicolumn-card__info h3 {
    font-size: 32px;
  }

  .multicolumn-card__info div {
    font-size: 16px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid

-%}

<div class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} sticky">
  {%- for block in section.blocks -%}
  
    <div
      id="Slide-{{ section.id }}-{{ forloop.index }}"
      class="card"
      {{ block.shopify_attributes }}
      {% if settings.animations_reveal_on_scroll %}
        data-cascade
        style="--animation-order: {{ forloop.index }};"
      {% endif %}
    >
      <h2>TEST</h2>
      <p>test</p>
    </div>
  
    {% comment %}
      <li
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {{ block.shopify_attributes }}
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: {{ forloop.index }};"
        {% endif %}
      >
      </li>
    {% endcomment %}
  {%- endfor -%}
</div>

